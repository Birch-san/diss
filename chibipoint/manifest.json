{
  "name": "ChibiPoint",
  "description": "Point at webpages using the keyboard",
  "version": "0.1",
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
      "css": ["styles.css"],
      "js": ["require.js", "require-cs.js",  "depend.js"],
      "run_at": "document_start"
		}
	],
  "permissions": [
	  "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Point at this page!"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "*.js"
  ]
}
